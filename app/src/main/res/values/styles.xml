<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>

        <item name="android:fontFamily">@font/lobster</item>
        <item name="fontFamily">@font/lobster</item>
        <item name="textAppearanceHeadline6">@style/CustomHeadline6</item>
        <item name="textAppearanceHeadline5">@style/CustomHeadLine5</item>
    </style>

    <style name="CustomHeadline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CustomHeadLine5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">24sp</item>
    </style>

</resources>